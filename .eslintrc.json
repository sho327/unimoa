{
    "extends": ["next/core-web-vitals", "plugin:prettier/recommended"],
    "rules": {
        "prettier/prettier": [
            "error",
            {
                "semi": false,
                "singleQuote": true,
                "trailingComma": "es5",
                "tabWidth": 2,
                "printWidth": 100,
                "bracketSpacing": true,
                "arrowParens": "always",
                "endOfLine": "lf"
            }
        ]
    }
}
